                        a.btn.btn-outline-light.btn-social.mx-1(href='https://github.com/st-vincent1')
                            i.fab.fa-fw.fa-github
                        a.btn.btn-outline-light.btn-social.mx-1(href='https://twitter.com/__stvincent')
                            i.fab.fa-fw.fa-twitter
