                    // Research Item 2
                    .col-md-6.col-lg-4.mb-5
                        .research-item.mx-auto(data-toggle='modal', data-target='#researchModal2')
                            .research-item-caption.d-flex.align-items-center.justify-content-center.h-100.w-100
